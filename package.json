{
  "name": "pdf-flow-pro",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/boot.cjs",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "dev:electron": "concurrently \"npm:dev\" \"wait-on http://localhost:5173 && ELECTRON_DEV=true electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "serve:dist": "npx serve dist",
    "package:electron": "npm run build && electron-builder --dir",
    "dist:electron": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win nsis --x64",
    "gen-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/vite": "^4.1.18",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "lucide-react": "^0.559.0",
    "@hello-pangea/dnd": "^18.0.1",
    "uuid": "^13.0.0",
    "xlsx": "0.18.5",
    "xlsx-js-style": "1.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "electron": "^25.3.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "sharp": "^0.32.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.yourname.pdfflowpro",
    "productName": "PDF Flow Pro",
    "icon": "assets/icon",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "asar": false,
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
